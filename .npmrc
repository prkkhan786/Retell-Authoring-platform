# Default npm configuration

# Save exact versions instead of using ^ or ~
save-exact=true

# Default package visibility when publishing
access=public

# Default registry
registry=https://registry.npmjs.org/

# Disable audit warnings
audit=false

# Configure package lock to be generated
package-lock=true

# Set default indentation for package.json
json-indent=2

# Cache settings
cache-min=10
cache-max=Infinity

# Default git tags prefix
tag-version-prefix="v"

# Progress bar settings
progress=true 